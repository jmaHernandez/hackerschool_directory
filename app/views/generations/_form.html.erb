<%= form_for @generation, :html => { :class => "form-horizontal generation" } do |f| %>

  <% if @generation.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@generation.errors.count, "error") %> prohibited this generation from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @generation.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :name, :class => 'form-control' %>
    </div>
    <%=f.error_span(:name) %>
  </div>
  <div class="form-group">
    <%= f.label :start_date, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :start_date, :class => 'form-control datepicker' %>
    </div>
    <%=f.error_span(:start_date) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit "Guardar", :class => 'btn btn-primary' %>
      <%= link_to "Cancelar",
                generations_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
