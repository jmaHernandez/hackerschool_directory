<div class="page-header">
  <h1><%= @hacker.name %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong>Nombre:</strong></dt>
  <dd><%= @hacker.name %></dd>
  <dt><strong>Email:</strong></dt>
  <dd><%= @hacker.email %></dd>
  <dt><strong>Generation:</strong></dt>
  <dd><%= @hacker.generation.name %></dd>
  <dt><strong>Creado en:</strong></dt>
  <dd><%= @hacker.created_at.strftime("%d/%B/%Y %H:%M") %></dd>
  <dt><strong>Actualizado en:</strong></dt>
  <dd><%= @hacker.updated_at.strftime("%d/%B/%Y %H:%M") %></dd>
</dl>
